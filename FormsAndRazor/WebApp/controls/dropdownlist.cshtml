@{
    Layout = "~/_LayoutPage.cshtml";
    var choice = Request.Form["CodingSample"];

}


@section banner
    {
    <h1>DropDownList</h1>
}

    <div>
        @if (IsPost)
        {
            switch (choice.ToUpper())
            {
                case "TEXTBOXES":
                    {
                        Response.Redirect("textboxes.cshtml");
                        break;
                    }
                case "RADIOBUTTONS":
                    {
                        Response.Redirect("radiobuttonlist.cshtml");
                        break;
                    }
                case "CHECKBOXES":
                    {
                        Response.Redirect("checkboxes.cshtml");
                        break;
                    }
                default:
                    {
                        //is the message if the prompt line 
                        <p><span style="color:firebrick">Make a selection from the list of sample choices</span></p>
                        break;
                    }
            }
        }
        <form id="theForm" action="" method="post">
            <div class="col-md-offset-1">
                <label id="forCodingSample0">Select the sample to view</label><br />
                <!--The select tag is used to the dropdown control Each item in the control is
            specified using the option tag. To set an item to be selected item, use the Option tag
            parameter selected
            If no itm has been selected the the first Option is the default option that is shown
            Often you will see that the first choice is a prompt from the control. This is
            referred to as a prompt line-->
                <select name="CodingSample">
                    <option value="">select....</option>
                    <option value="TextBoxes">TextBoxes</option>
                    <option value="RadioButtons">RadioButtons</option>
                    <option value="CheckBoxes">CheckBoxes</option>
                </select>
                &nbsp;&nbsp;
                <button type="submit" name="formButton" value="submit" class="btn btn-primary">Go to ...</button>
            </div>
        </form>
    </div>